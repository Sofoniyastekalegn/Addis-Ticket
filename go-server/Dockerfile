FROM golang:1.21-alpine

WORKDIR /app

# Install git and ca-certificates
RUN apk add --no-cache git ca-certificates

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Build the application
RUN go build -o main .

# Create uploads directory
RUN mkdir -p uploads/movies

# Expose port
EXPOSE 8080

# Run the application
CMD ["./main"]
```

